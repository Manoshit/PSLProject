

@model Auth.Models.Registeration


@{
    ViewBag.Title = "Register";
    //  Layout = "~/Views/Shared/_Layout.cshtml"; 
}


<div class="container my-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header justify-content-center">
                    <h3 class="mb-0">REGISTER</h3>
                </div>
                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true, "",new { @class="text-danger"});
                        <div>

                            <fieldset>

                                <div class="editor-label">@Html.LabelFor(u => u.Email)</div>
                                <div class="editor-field">
                                    @Html.EditorFor(u => u.Email, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                    @Html.ValidationMessageFor(u => u.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="editor-label">@Html.LabelFor(u => u.Password)</div>
                                <div class="editor-field">
                                    @Html.EditorFor(u => u.Password, new { htmlAttributes = new { @class = "form-control col-md-12", @type = "password" } })
                                    @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="editor-label">@Html.LabelFor(u => u.FirstName)</div>
                                <div class="editor-field">
                                    @Html.EditorFor(u => u.FirstName, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                    @Html.ValidationMessageFor(u => u.FirstName, "", new { @class = "text-danger" })
                                </div>
                                <div class="editor-label">@Html.LabelFor(u => u.LastName)</div>
                                <div class="editor-field">
                                    @Html.EditorFor(u => u.LastName, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                    @Html.ValidationMessageFor(u => u.LastName, "", new { @class = "text-danger" })
                                </div>
                                <div class="editor-label">@Html.LabelFor(u => u.ContactNumber)</div>
                                <div class="editor-field">
                                    @Html.EditorFor(u => u.ContactNumber, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                    @Html.ValidationMessageFor(u => u.ContactNumber, "", new { @class = "text-danger" })
                                </div>
                                <div class="editor-label">@Html.LabelFor(u => u.Address)</div>
                                <div class="editor-field">
                                    @Html.TextAreaFor(u => u.Address, new { @class = "form-control col-lg-12", @rows = "5" })
                                    @Html.ValidationMessageFor(u => u.Address, "", new { @class = "text-danger" })
                                </div>
                                <div class="my-3">
                                    <input type="submit" value="Register" class="col-md-12 btn btn-outline-secondary btn-block" />
                                </div>
                            </fieldset>
                        </div>
                    }
                </div>
                </div>
            </div>
        </div>
    </div>





